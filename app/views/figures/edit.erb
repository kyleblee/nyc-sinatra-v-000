<h1>Update a new figure!</h1>
<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="figure_name">Figure Name:</label>
  <input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>"><br><br><br>

  <label>Choose a title for your figure:</label><br>
  <%Title.all.each do |title|%>
    <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
  <% end %><br><br>

  <label for="new_title">Or, create a new title for your figure:</label><br>
  <input id="new_title" type="text" name="title[name]"><br><br><br>

  <label>Choose a landmark for your figure:</label><br>
  <%Landmark.all.each do |landmark|%>
    <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input>
  <% end %><br><br>

  <label for="new_landmark">Or, create a landmark for your new figure:</label><br>
  <input id="new_landmark" type="text" name="landmark[name]"><br><br><br>

  <input type="submit" value="Edit Figure">
</form>
