<h1><%=@figure.name%></h1>
<%if !@figure.titles.empty?%>
  <p>Figure Titles</p>
    <ul>
      <%@figure.titles.each do |title|%>
        <li><%=title.name%></li>
      <% end %>
    </ul>
<%else%>
  <p><%=@figure.name%> has no titles.</p>
<% end %>

<%if !@figure.landmarks.empty?%>
  <p>Figure Landmarks</p>
    <ul>
      <%@figure.landmarks.each do |landmark|%>
        <li><%=landmark.name%></li>
      <% end %>
    </ul>
<%else%>
  <p><%=@figure.name%> has no landmarks.</p>
<% end %>
